<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="158.0" layoutY="37.0" text="Selecione a opção que deseja">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" layoutX="40.0" layoutY="138.0" spacing="10.0">
            <children>
                <Label text="aluno" textFill="#555555">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="sairButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" text="Sair" />
            </children>
        </VBox>

        <VBox layoutX="220.0" layoutY="115.0" spacing="20.0">
            <children>
                <HBox spacing="20.0">
                    <children>
                        <Button fx:id="provaButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="130.0" text="Realizar Prova" />
                        <Button fx:id="notasButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="130.0" text="Ver Notas" />
                    </children>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <Button fx:id="feedbackButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="130.0" text="Feedbacks" />
                        <Button fx:id="notificacoesButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="130.0" text="Notificações" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
