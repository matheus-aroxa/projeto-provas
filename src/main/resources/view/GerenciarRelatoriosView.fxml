<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GerenciamentoDeRelatoriosController">
    <children>
        <Label layoutX="158.0" layoutY="37.0" text="Gerenciamento de Relatórios">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" layoutX="40.0" layoutY="138.0" spacing="10.0">
            <children>
                <Label text="admin" textFill="#555555">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="sairButton" mnemonicParsing="false" onAction="#handleSair" prefHeight="30.0" prefWidth="80.0" text="Sair" />
            </children>
        </VBox>

        <VBox layoutX="300.0" layoutY="114.0" spacing="20.0">
            <children>
                <HBox spacing="20.0">
                    <children>
                        <Button fx:id="disciplinasButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="162.0" text="Relatório das disciplinas" />
                    </children>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <Button fx:id="completoButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="165.0" text="Relatório completo" />
                    </children>
                </HBox>
            </children>
        </VBox>
      <Button fx:id="voltarButton" layoutX="40.0" layoutY="34.0" mnemonicParsing="false" onAction="#handleVoltar" prefHeight="30.0" prefWidth="80.0" text="Voltar" />
    </children>
</AnchorPane>
